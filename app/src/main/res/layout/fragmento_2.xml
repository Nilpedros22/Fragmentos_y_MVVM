<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBFFFF"
    android:padding="20dp"
    tools:context=".Fragmento2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragmento 2"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ET_DatosParaEnviar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:hint="Datos para enviar"
        android:padding="20dp" />

    <TextView
        android:id="@+id/TV_DatosRecibidos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ET_DatosParaEnviar2"
        android:layout_marginTop="20dp"
        android:background="#ddd"
        android:padding="20dp"
        android:text="Datos recibidos" />

    <Button
        android:id="@+id/BTN_EnviarDatos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_DatosRecibidos2"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F00"
        android:padding="20dp"
        android:text="Enviar Datos" />

</RelativeLayout>